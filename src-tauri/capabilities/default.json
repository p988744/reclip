{
  "$schema": "https://schemas.tauri.app/v2/desktop-capability.json",
  "identifier": "default",
  "description": "Default capabilities for Reclip",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    {
      "identifier": "fs:allow-read",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [{ "path": "**" }]
    }
  ]
}
